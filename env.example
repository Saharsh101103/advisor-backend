# Application Configuration
APP_PORT=8000
NODE_ENV=development

# Session Configuration
SESSION_SECRETKEY=your-secret-key-here


# File Upload Configuration
UPLOAD_FILE_SIZE_LIMIT_MB=50

# S3/MinIO Configuration
S3_ENDPOINT=localhost
S3_PORT=9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_USE_SSL=false
S3_BUCKET=advisor-files
S3_FILESIZE_LIMIT_MB=50
PRESIGNED_URL_EXPIRY_SECONDS=86400

# AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Authentication (Optional - add when implementing auth)
GOOGLE_AUTH_CLIENT_ID=your-google-client-id
GOOGLE_AUTH_SECRET=your-google-client-secret
MICROSOFT_AUTH_CLIENT_ID=your-microsoft-client-id
MICROSOFT_AUTH_CLIENT_SECRET=your-microsoft-client-secret

# Twilio (Optional - add when implementing SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Email (Optional - add when implementing email)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain
