{
  "name": "advisor-backend",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "predev": "bun gen:docs",
    "dev": "bun --watch src/index.ts",
    "prebuild": "bun run gen",
    "build": "NODE_ENV=production bun run build.ts",
    "start": "bun run dist/index.js",
    "test": "bun test --preload ./src/lib/bootstrap",
    "test:dev": "vitest watch",
    "gen": "bun run gen:code && bun run gen:queries && bun run gen:docs",
    "gen:apis": "bun run gen:docs && bru import openapi -s public/docs.yaml -o public/tmp && rsync -a 'public/tmp/' 'public/Advisor APIs' && rm -rf public/tmp",
    "gen:docs": "SKIP_REDIS=true bun run src/lib/generate-docs.ts",
    "gen:code": "bunx @gel/generate edgeql-js --out ./src/edgeql-js && bunx @gel/generate interfaces --file ./src/lib/types/generated.ts",
    "gen:queries": "bunx @gel/generate queries --file ./src/lib/repository && bun format",
    "db:create-migration": "gel migration create",
    "db:apply-migration": "gel migration apply",
    "db:migrate": "bun run db:create-migration && bun run db:apply-migration",
    "db:dev": "gel watch --migrate",
    "db:reset": "util/db-reset.sh",
    "typecheck": "tsc --noEmit",
    "cron:read-emails": "bun run src/crons/email-job.ts",
    "format": "bunx biome format --write",
    "lint": "bunx biome lint --write",
    "check": "bunx biome check --write",
    "postinstall": "lefthook install"
  },
  "dependencies": {
    "@google/genai": "^1.15.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.6.0",
    "cheerio": "^1.1.2",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-fileupload": "^1.5.2",
    "express-session": "^1.18.2",
    "express-zod-api": "^24.7.3",
    "fluent-ffmpeg": "^2.1.3",
    "gel": "^2.1.1",
    "googleapis": "^153.0.0",
    "http-errors": "^2.0.0",
    "imapflow": "^1.0.194",
    "isomorphic-fetch": "^3.0.0",
    "lexorank": "^1.0.5",
    "libphonenumber-js": "^1.12.12",
    "mailgun.js": "^12.0.3",
    "mailparser": "^3.7.4",
    "meilisearch": "^0.51.0",
    "minio": "^8.0.5",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-microsoft": "^2.1.0",
    "pino": "^9.9.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.8.0",
    "typedi": "^0.10.0",
    "uuid": "^11.1.0",
    "yamljs": "^0.3.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@faker-js/faker": "^9.9.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "^1.2.20",
    "@types/email-reply-parser": "^1.4.2",
    "@types/express": "^5.0.3",
    "@types/express-fileupload": "^1.5.1",
    "@types/express-session": "^1.18.2",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/http-errors": "^2.0.5",
    "@types/imapflow": "^1.0.23",
    "@types/mailparser": "^3.4.6",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.17.2",
    "@types/nodemailer": "^6.4.18",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/passport-microsoft": "^1.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/twilio": "^3.19.3",
    "@types/uuid": "^10.0.0",
    "@types/yamljs": "^0.2.34",
    "@usebruno/cli": "^2.9.1",
    "bun-plugin-pino": "^1.4.0",
    "eslint": "^9.33.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.3.0",
    "lefthook": "^1.12.3",
    "pino-caller": "^4.0.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  }
}
